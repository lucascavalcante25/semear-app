<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <!--
        Added the entity Devocional.
    -->
    <changeSet id="20260209173850-1" author="jhipster">
        <validCheckSum>ANY</validCheckSum>
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="devocional"/>
            </not>
        </preConditions>
        <createTable tableName="devocional">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="titulo" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="versiculo_base" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="texto_versiculo" type="${clobType}">
                <constraints nullable="false" />
            </column>
            <column name="conteudo" type="${clobType}">
                <constraints nullable="false" />
            </column>
            <column name="data_publicacao" type="date">
                <constraints nullable="false" />
            </column>
            <column name="created_at" type="${datetimeType}">
                <constraints nullable="true" />
            </column>
            <column name="updated_at" type="${datetimeType}">
                <constraints nullable="true" />
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>
