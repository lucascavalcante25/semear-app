<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="20260225000000-1" author="semear">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="jhi_user" columnName="image_data"/>
            </not>
        </preConditions>
        <addColumn tableName="jhi_user">
            <column name="image_data" type="bytea">
                <constraints nullable="true"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="20260225000000-2" author="semear">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="jhi_user" columnName="image_content_type"/>
            </not>
        </preConditions>
        <addColumn tableName="jhi_user">
            <column name="image_content_type" type="varchar(100)">
                <constraints nullable="true"/>
            </column>
        </addColumn>
    </changeSet>

</databaseChangeLog>
